HSC = ghc
TARGETS = Nearbies Dustify
RUNTARGETS = $(addsuffix .run, $(TARGETS))

all: $(TARGETS)

clean:
	rm -v $(TARGETS)
	rm -v *.hi *.o

run: $(RUNTARGETS)

Nearbies.run: Nearbies
	@echo Factoring challenge 1 ...
	@./Nearbies 0 
	@echo
	@echo Factoring challenge 2 ...
	@./Nearbies 20 
	@echo
	@echo Factoring challenge 3 ...
	@./Nearbies -p6 -q4 0 
	@echo

Dustify.run: Dustify
	@echo Deciphering challenge ...
	@./Dustify \
	13407807929942597099574024998205846127479365820592393377723561443721764030073662768891111614362326998675040546094339320838419523375986027530441562135724301 \
	13407807929942597099574024998205846127479365820592393377723561443721764030073778560980348930557750569660049234002192590823085163940025485114449475265364281 \
	65537 \
	
	@echo

%: %.hs
	$(HSC) -O2 --make $@.hs
